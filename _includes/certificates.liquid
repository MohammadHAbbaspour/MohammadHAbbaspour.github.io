<div class="grid-sizer"></div>
<div class="grid-item">
  <a href="{% if certificate.redirect %}{{ certificate.redirect }}{% else %}{{ certificate.url | relative_url }}{% endif %}">
    <div class="card hoverable">
      <div class="card-body">
        <h2 class="card-title">{{ certificate.title }}</h2>
        <ul>
          <li><p class="card-text">{{ certificate.organization }},&nbsp;&nbsp; Issued {{ certificate.issued }}</p></li>
          <li><p class="card-text">Credential ID: {{ certificate.credential_id }}</p></li>
        </ul>
        <div class="row ml-1 mr-1 p-0">
          {% if certificate.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ certificate.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if certificate.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ certificate.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
