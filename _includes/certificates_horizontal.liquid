<div class="card-item col">
  <a href="{% if certificate.redirect %}{{ certificate.redirect }}{% else %}{{ certificate.url | relative_url }}{% endif %}">
    <div class="card hoverable">
      <div class="row g-0">
        <div class="{% if certificate.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ certificate.title }}</h3>
            <p class="card-text">{{ certificate.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if certificate.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ certificate.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if certificate.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ certificate.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
