---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}

  <a href="{{ page.pdf | prepend: 'assets/pdf/' | relative_url}}"     
    target="_blank"     
    rel="noopener noreferrer"      
    class="float-right">Download PDF <i class="fa-solid fa-file-pdf"></i></a><br>
  
  <div class="row mt-3">
    <div class="col-sm mt-3 mt-md-0">
        {% assign img_path = page.img | prepend: 'assets/img/certificates/' %}
        {% assign img_class = 'img-fluid rounded z-depth-1' %}
        {% include figure.liquid path = img_path class = img_class %}
    </div>
  </div>
</div>
